<div>

  <h3 class="user__welcome-text"> Welcome <%= @user.first_name %>! </h3>
  <h6 class="user__edit-instructions"> Click on the fields to edit your profile! Don't worry, it will save automatically. </h6>

  <div class="user__personal-info">
    <p> First Name: <%= best_in_place @user, :first_name, :as => :input %></p>
    <p> Last Name: <%= best_in_place @user, :last_name, :as => :input %></p>
    <p> Username: <%= best_in_place @user, :username, :as => :input %></p>
    <p> Email: <%= best_in_place @user, :email, :as => :input %></p>
    <p> Followed Teams: </p>
    <% @user.followed_teams.each do |team| %>
      <%= link_to team_path(team.id), class: "teams__team-details-link" do %>
        <p> <%= team.name %></p>
      <% end %>
    <% end %>
  </div>


</div>